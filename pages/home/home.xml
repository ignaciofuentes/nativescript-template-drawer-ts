<dpg:DrawerPage
  xmlns="http://schemas.nativescript.org/tns.xsd"
  xmlns:drawer="nativescript-telerik-ui/sidedrawer"
  xmlns:widgets="shared/widgets"
  xmlns:dpg="nativescript-telerik-ui/sidedrawer/drawerpage"
  xmlns:statusbar="nativescript-statusbar"
  loaded="loaded">
  <statusbar:StatusBar ios:barStyle="light" />

  <page.actionBar>
    <action-bar title="NativeScript">
      <navigation-button icon="res://ic_menu" tap="toggleDrawer" ios:visibility="collapsed" />
      <action-bar.actionItems>
        <ios>
          <action-item icon="res://ic_menu" ios.position="left" tap="toggleDrawer" />
        </ios>
      </action-bar.actionItems>
    </action-bar>
  </page.actionBar>


  <dpg:DrawerPage.sideDrawer>
  <drawer:rad-side-drawer id="drawer">
    <drawer:rad-side-drawer.drawerContent>
      <widgets:drawer-content />
    </drawer:rad-side-drawer.drawerContent>
  </drawer:rad-side-drawer>
  </dpg:DrawerPage.sideDrawer>

     <!-- Home page contents -->
      <stack-layout loaded="mainContentLoaded">
        <image src="https://i.imgur.com/LY3cb3A.png" id="logo" tap="fun" height="100" margin="20 0 0 0" />
        <label text="{{ myText }}" margin="20" horizontalAlignment="center" textWrap="true" />
      </stack-layout>

</dpg:DrawerPage>
